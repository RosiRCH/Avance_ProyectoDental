#include <iostream>
using namespace std;

struct cita
{
  char nombre[50];
  char descripcion[300]; 
  char tratamiento[50];
  float fecha;
};
int main()
{
    int i;
    int j;
    cita dental [3];
    int opc;
    int menu = 1;
    int otracita = 1;
    char md;

    while (menu == 1)
    {
        cout << "Bienvenido, favor de indicar la opcion que desea: " << endl;
        cout << "1. Agendar cita " << endl;
        cout << "2. Modificar cita " << endl;
        cout << "3. Eliminar cita " << endl;
        cout << "4. Lista de citas vigentes " << endl;
        cout << "5. Limpiar pantalla " << endl;
        cout << "6. Salir " << endl;
        cin >> opc;

        switch (opc)
        {
        case 1:
            while (otracita == 1)
            {
                for(i=0;i<3;i++)
                cout<<"Numero de cita:"<<i+1<<endl;
                cout << "Ingrese nombre del paciente:" << endl;
                cin.ignore();
                cin.getline(dental[i].nombre, 50, '\n');

                cout << "Especifique el tratamiento a recibir" << endl;
                cout << "1. limpieza" << endl;
                cout << "2. endodoncia" << endl;
                cout << "3. brackets" << endl;
                cout << " 4. coronillas" << endl;
                cin >> dental[i].tratamiento;

                cout << "Ingrese descripción del tratamiento:" << endl; 
                cin.ignore();
                cin.getline(dental[i].descripcion, 300, '\n');

                cout << "Que dia desea agendar la cita? (Dia.mes)" << endl;
                cin >> dental[i].fecha;

                cout << "desea agendar otra cita?" << endl;
                cout << "1. si" << endl;
                cout << "2. no" << endl;
                cin >> otracita;
            }

            break;

        case 2:
        cout<<"Ingrese el numero de cita asignado: ";
        cin>>j;
        j=j-1;
        cout<<"ingrese que desea modificar"<<endl;
        cout<<"A.-nombre,B.-tratamiento,C.-descripción,D.-fecha, E.- toda la cita"<<endl;
        cin>>md;
            switch(md)
            { 
                case 'A':
                for(i=j;i<=j;i++)
               {
            cout<<"Numero de cita"<<i+1<<endl;
            cin.ignore();
            cin.getline(dental[i].nombre, 50, '\n');
               }
                break;
                case 'B':
                for(i=j;i<=j;i++)
               {
            cout<<"Numero de cita"<<i+1<<endl;
            cin>>dental[i].tratamiento;
               }
                break;
                case 'C':
                for(i=j;i<=j;i++)
               {
            cout<<"Numero de cita"<<i+1<<endl;
            cin.ignore();
            cin.getline(dental[i].descripcion, 300, '\n');

               }
                break;
                case 'D':
                for(i=j;i<=j;i++)
               {
            cout<<"Numero de cita"<<i+1<<endl;
            cin>>dental[i].fecha;
               }
                break;
                case 'E':
                for(i=j;i<=j;i++)
                {
            cout<<"Numero de cita"<<i+1<<endl;
            cout<<"Nombre del paciente"<<endl;
            cin.ignore();
            cin.getline(dental[i].nombre, 50, '\n');
            cout<<"Tratamiento a realizar (limpieza, endodoncia, brackets, coronillas)"<<endl;
            cin>>dental[i].tratamiento;
            cout<<"Descripcion del tratamiento"<<endl;
            cin.ignore();
            cin.getline(dental[i].descripcion, 300, '\n');
            cout<<"Fecha de la cita (dia.mes)"<<endl;
            cin>>dental[i].fecha;
                }
                break;
                default:
                cout<<"Opcion invalida";
            }
            break;

        case 3:
            break;

        case 4:
          for(i=0;i<3;i++)
        { 
            cout<<"Numero de cita"<<i+1<<endl;
            cout<<"Nombre del paciente"<<endl;
            cout<<dental[i].nombre<<endl;
            cout<<"Tratamiento a realizar"<<endl;
            cout<<dental[i].tratamiento<<endl;
            cout<<"Descripcion del tratamiento"<<endl;
            cout<<dental[i].descripcion<<endl;
            cout<<"Fecha de la cita (dia.mes)"<<endl;
            cout<<dental[i].fecha<<endl;

        }
            break;

        case 5:
            break;

        case 6:
            exit(EXIT_SUCCESS);
            break; 

        default:
            cout << "opcion invalida" << endl; 
        }

        cout << "Quiere volver al menu?" << endl;
        cout << "1. si" << endl;
        cout << "2. no" << endl;
        cin >> menu;
    }
}
